# Environment Variables Template
# Copy this file to .env.local and fill in the actual values

# ========================================
# Database Configuration
# ========================================
# MongoDB connection string
# For local MongoDB: mongodb://localhost:27017/deepseek
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/deepseek
MONGODB_URI=mongodb://localhost:27017/deepseek

# ========================================
# Clerk Authentication
# ========================================
# Get these from: https://clerk.dev/
# Publishable key (starts with pk_)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Secret key (starts with sk_)
CLERK_SECRET_KEY=sk_test_your_secret_key_here

# Webhook secret for Clerk webhooks (starts with whsec_)
CLERK_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ========================================
# AI Configuration
# ========================================
# Google Generative AI API Key
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_GENAI_API_KEY=your_google_genai_api_key_here

# ========================================
# Development Configuration
# ========================================
# Set to 'development' for local development
NODE_ENV=development

# Next.js configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ========================================
# Optional: Additional Configuration
# ========================================
# Logging level (debug, info, warn, error)
LOG_LEVEL=info

# Maximum retry attempts for API calls
MAX_RETRY_ATTEMPTS=3

# Database connection timeout (milliseconds)
DB_TIMEOUT=10000